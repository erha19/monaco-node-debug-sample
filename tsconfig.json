{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": false,
        "declaration": true,
        "stripInternal": true,
        "lib": [
          "es2016",
          "dom"
        ],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "rootDir": "src",
        "outDir": "lib",
        "baseUrl": ".",
        "skipLibCheck": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src"
    ]
}